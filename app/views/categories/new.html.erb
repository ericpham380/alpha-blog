<div class="form-group col-xs-12">
  <h1 class="col-sm-offset-2 col-sm-8">Create new category</h1>
</div>

<%= render 'shared/errors', obj: @category %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@category, :html => {class: "form-horizontal", role: "form"}) do |a| %>
    
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= a.label :name %>
      </div>
      <div class="col-sm-8">
        <%= a.text_field :name, class: "form-control", placeholder: "Enter category name", autofocus: true %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= a.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= link_to 'Back', articles_path%>
      </div>
    </div>
    <% end %>


  </div>
</div>
