<!-- Display ERROR message if not created successfully -->
<% if @article.errors.any? %>
<h3>Error!</h3>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li> <%= msg %> </li>
    <% end %>
  </ul>
<% end %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |a| %>
    <div class="form-group">
      <h1 class="col-sm-offset-2 col-sm-10">Create an article</h1>
    </div>
    
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= a.label :title %>
      </div>
      <div class="col-sm-10">
        <%= a.text_field :title, class: "form-control", placeholder: "Article Title", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= a.label :description %>
      </div>
      <div class="col-sm-10">
        <%= a.text_area :description, class: "form-control", placeholder: "Article Body", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= a.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= link_to 'Back', articles_path%>
      </div>
    </div>
    <% end %>


  </div>
</div>