<!-- Display ERROR message if not created successfully -->
<%= render 'shared/errors', obj: @article %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |a| %>
    
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= a.label :title %>
      </div>
      <div class="col-sm-8">
        <%= a.text_field :title, class: "form-control", placeholder: "Article Title", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= a.label :description %>
      </div>
      <div class="col-sm-8">
        <%= a.text_area :description, class: "form-control", placeholder: "Article Body", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= a.submit class: "btn btn-primary btn-lg" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= link_to 'Back', articles_path%>
      </div>
    </div>
    <% end %>


  </div>
</div>