<h1 align="center">Sign up to Alpha Blog</h1>


<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |a| %>
    
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= a.label :username %>
      </div>
      <div class="col-sm-8">
        <%= a.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= a.label :email %>
      </div>
      <div class="col-sm-8">
        <%= a.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= a.label :password %>
      </div>
      <div class="col-sm-8">
        <%= a.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= a.submit "Sign up", class: "btn btn-primary btn-lg" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= link_to 'Back', articles_path%>
      </div>
    </div>
    <% end %>


  </div>
</div>