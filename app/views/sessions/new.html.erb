<div class="form-group col-xs-12">
  <h1 class="col-sm-offset-2 col-sm-8">Log in</h1>
</div>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url:login_path) do |a| %>
    
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= a.label :email %>
      </div>
      <div class="col-sm-8">
        <%= a.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= a.label :password %>
      </div>
      <div class="col-sm-8">
        <%= a.password_field :password, class: "form-control", 
                            placeholder: "Enter password", autocomplete: "off"  %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= a.submit "Log in", class: "btn btn-primary btn-lg" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <%= link_to 'Back', articles_path%>
      </div>
    </div>
    <% end %>


  </div>
</div>